{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "removeComments": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "typeRoots": ["types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build",
    "alwaysStrict": true
  }
}